{
	"name": "vscode-systemd-support",
	"displayName": "Systemd Helper",
	"description": "Help you write Systemd configuration file on Visual Studio Code",
	"icon": "images/icon-64x64.png",
	"main": "out/webpack.js",
    "browser": "out/webpack.js",
	"version": "1.0.0",
	"publisher": "hangxingliu",
	"author": "hangxingliu",
	"license": "MIT",
	"engines": {
		"vscode": "^1.20.0"
	},
	"categories": [
		"Programming Languages",
		"Snippets"
	],
	"keywords": [
		"Linux",
		"Systemd",
		"Configurations"
	],
	"extensionKind": [
		"ui",
		"workspace"
	],
	"scripts": {
		"ts": "ts-node",
		"build:all": "npm run build:syntax && npm run build:desktop && npm run build:webpack",
		"build:desktop": "tsc -p tsconfig.json && cd src && copyfiles '**/*.{tmLanguage,json}' ../out",
		"build:webpack": "webpack --mode production --devtool hidden-source-map",
		"build:syntax": "ts-node ./src/syntax/generate-tmLanguage.ts",
		"fetch:directives": "ts-node ./src/utils/fetch-all-directives.ts",
        "clean": "rimraf out"
	},
	"activationEvents": [
		"onLanguage:systemd-conf"
	],
	"contributes": {
		"languages": [
			{
				"id": "systemd-conf",
				"aliases": [
					"Systemd Configuration",
                    "systemd-conf",
					"systemd-unit-file"
				],
				"extensions": [
					".link",
					".netdev",
					".network",
					".service",
					".socket",
					".device",
					".mount",
					".automount",
					".swap",
					".target",
					".path",
					".timer",
					".snapshot",
					".slice",
					".scope"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "systemd-conf",
				"scopeName": "source.systemd",
				"path": "./out/syntax/systemd.tmLanguage"
			}
		]
	},
	"devDependencies": {
		"@types/node": ">=14",
		"@types/vscode": "*",
		"axios": "^0.24.0",
		"cheerio": "^1.0.0-rc.10",
		"colors": "^1.4.0",
		"copyfiles": "^2.4.1",
		"https-proxy-agent": "^5.0.0",
		"rimraf": "^3.0.2",
		"ts-loader": "^9.2.6",
		"ts-node": "^10.4.0",
		"turndown": "^7.1.1",
		"typescript": "^4.5.3",
		"webpack": "^5.65.0",
		"webpack-cli": "^4.9.1"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/hangxingliu/vscode-systemd"
	},
	"bugs": {
		"url": "https://github.com/hangxingliu/vscode-systemd/issues"
	},
	"homepage": "https://github.com/hangxingliu/vscode-systemd"
}
